<% if @employee.errors.any? %>
<h3>Please fix these errors:</h3>
<ul>
  <% @employee.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<h1>Edit Employee</h1>

<%= form_for [@division, @employee] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :position %>
  <%= f.text_area :position %>
  <p><%= f.submit %></p>
<% end %>
